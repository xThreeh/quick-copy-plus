
{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "default_locale": "en",
  "version": "1.0",
  "description": "__MSG_extDesc__",
  "author": "xThreeh",
  "homepage_url": "https://qalith.com",
  "permissions": [
    "contextMenus",
    "scripting",
    "activeTab"
  ],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/copy.svg",
        "icons/uppercase.svg",
        "icons/lowercase.svg",
        "icons/titlecase.svg"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
